<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TripLife" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ADE7EC</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ADE7EC</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="color">@color/sea</item>
    </style>
    <style name="YourActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 다른 액티비티에서는 액션바를 숨김 -->
        <item name="colorAccent">#ADE7EC</item>
        <item name="colorControlActivated">#ADE7EC</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>


    </style>

</resources>